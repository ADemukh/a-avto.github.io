extends layout

block content
    div.center
        label Запчясти в базе данных
    p
        div.float
            div.cbm_wrap_button
                div.wrapper_body_button
                    a.addCarSubmit(href="/spares/allSpares/add") Добавить
    br
    br
    br
    br                
    each spare in spares
        div.float
            div.cbm_wrap
                div.wrapper_body
                    form(action='/spares/allSpares/delete', method='POST')
                        a.allLinks(href="/spares/allSpares/#{spare.name}") #{spare.name}               
                        input(type='hidden', value=spare.name, name='name')
                        button.close(type='submit' title='Удалить' onclick="return confirm('Вы уверены?') ? true : false;").
