extends layout

block content
    div.center
        label Типы КПП в базе данных
    p
        div.float
            div.cbm_wrap_button
                div.wrapper_body_button
                    a.addSubmit(href="/cars/gearboxes/add") Добавить
    each gearbox in gearboxes
        div.float
            div.cbm_wrap
                div.wrapper_body
                    form(action='/cars/gearboxes/delete', method='POST')
                        input(type='hidden', name='id', value=gearbox._id)
                        a.allLinks() #{gearbox.name}
                        button.close(type='submit' title='Удалить' onclick="return confirm('Вы уверены?') ? true : false;")