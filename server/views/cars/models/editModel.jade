extends ../layout

block content
    form(action='/cars/marks/' + model.mark + '/' + model.model + '/edit', method='POST')
        P
            a.links(href="/cars/marks/"+model.mark) Back 
            a.links(href="/cars/marks") All marks
        p.someLabel #{ model.mark }
            br        
            input.textBox(type='text', name='model', value=model.model)
            br
            input.textBox(type='text', name='from', value=model.from)
            br            
            input.textBox(type='text', name='end', value=model.end)
        p
            input(type='hidden', name='id', value=model._id)
            button.addCarSubmit(type='submit').
                Update
    form(action='/cars/marks/' + model.mark + '/' + model.model + '/delete', method='POST')
        input(type='hidden', name='id', value=model._id)
        button.addCarSubmit(type='submit').
             Delete