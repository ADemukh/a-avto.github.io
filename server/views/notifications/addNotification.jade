extends layout

block content
  form(method='post', action='add')
      div.cbm_wrap_button
        div.wrapper_body_button
          a.addSubmit(href="/notifications/notifications") Нотификации
      p.center Добавление нотификации:
        .cbm_wrap_center
            .wrapper_body_center
                input.Submit(type='text', name='name', value=name, placeholder='Имя')
        .cbm_wrap_center
            .wrapper_body_center
                input.Submit(type='text', name='type', value=type, placeholder='Тип')
        .cbm_wrap_center
            .wrapper_body_center
                select.Submit(name='forClient')
                    option(value="" disabled selected) Для клиента
                    each bool in ['true', 'false']
                        option(value=bool) #{bool}
        .cbm_wrap_center
            .wrapper_body_center
                select.Submit(name='forShop')
                    option(value="" disabled selected) Для магазина
                    each bool in ['true', 'false']
                        option(value=bool) #{bool} 
      p
          input(type='hidden', name='id', value=_id)
          div.cbm_wrap_button_center
              div.wrapper_body_button_center
                  button.addSubmit(type='submit').
                      Добавить
